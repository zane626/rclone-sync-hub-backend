# Flask配置
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_SECRET_KEY=production-secret-key-change-this

# 数据库配置 - 使用Docker服务名
MONGO_URI=mongodb://mongodb:27017/rclone
MONGO_DEFAULT_DB=rclone

# Redis配置 - 使用Docker服务名
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# 任务队列配置
# TASK_QUEUE_MANAGE=manage
TASK_QUEUE_MANAGE=celery
TASK_QUEUE_EXEC=celery
CELERY_DEFAULT_QUEUE=default
CELERY_TASKS_QUEUE=tasks

# Celery Worker配置
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_HOSTNAME=worker1@%h

# Celery Beat配置
CELERY_BEAT_SCHEDULE_FILE=/app/celerybeat-schedule
CELERY_BEAT_PIDFILE=/app/celerybeat.pid

# Flower配置
FLOWER_PORT=5555
FLOWER_BASIC_AUTH=admin:password
ENABLE_FLOWER=false

# Celery Beat配置
ENABLE_CELERY_BEAT=true

# 任务管理配置
TASK_RUN_MODE=celery
DELAY=600